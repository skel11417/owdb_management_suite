<p id="notice"><%= notice %></p>

<h3><%= image_tag(@pod.country.get_img_url, size: "25") %> <%= @pod.country.name %>
<%= @pod.arr_date %></h3>
<h4><%= @pod.theme %></h4>
<table>
  <tr>
    <td>Local Host:</td>
    <td><%= @pod.host_org.name %></td>
  </tr>
  <tr>
    <td>Grantee:</td>
    <td><%= @pod.grantee.name %></td>
  </tr>
  <tr>
    <td>Status:</td>
    <td><%= @pod.confirmed? %></td>
  </tr>

</table>



<%= link_to 'Edit', edit_pod_path(@pod) %> |
