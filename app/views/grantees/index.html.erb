<p id="notice"><%= notice %></p>

<h1>Grantees</h1>
<p><%= link_to 'New Grantee', new_grantee_path %></p>

<% @grantees.each do |grantee| %>
  <h3><%= link_to grantee.name, grantee %></h3>
    <table class="table table-bordered table-active table-hover">
      <thead>
        <tr>
          <th>Arrival Date </th>
          <th>Country </th>
          <th>Location </th>
          <th>Local Host </th>
          <th>Grantee </th>
          <th>Theme </th>
          <th>Status</th>
        </tr>
      </thead>
    <tbody>
    <% grantee.pods.each do |pod| %>
      <% if pod.confirmed %>
        <tr onclick="window.location='<%= pod_path(pod) %>';">
      <% else %>
        <tr onclick="window.location='<%= pod_path(pod) %>';" class="warning">
      <% end %>
        <td><%= pod.arr_date %></td>
        <td><%= pod.country.name%> <%= image_tag(pod.country.get_img_url, size: "30") %></td>
        <td><%= pod.host_org.get_city_state %></td>
        <td><%= pod.host_org.name %></td>
        <td><%= pod.grantee.abbr %></td>
        <td><%= pod.theme %></td>
        <td><%= pod.confirmed? %> </td>
      </tr>
    <% end %>
    </tbody>
    </table>

  <!-- <td><%= link_to 'Edit', edit_grantee_path(grantee) %></td> -->
  <% end %>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <tr>

    </tbody>
  </table>

<br>
